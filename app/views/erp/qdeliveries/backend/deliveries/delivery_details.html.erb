<table class="table table-bordered table-striped flip-content">
    <thead class="flip-content">
        <tr>
            <th class="bg-yellow bg-font-yellow text-left" width="20%">Tên sản phẩm</th>
            <th class="bg-yellow bg-font-yellow text-center">ĐVT</th>
            <th class="bg-yellow bg-font-yellow text-left">Số lô/Serials</th>
            <th class="bg-yellow bg-font-yellow text-nowrap text-center">Tình trạng</th>
            <th class="bg-yellow bg-font-yellow text-nowrap text-center">Kho</th>
            <th class="bg-yellow bg-font-yellow text-nowrap text-left">Chg.từ liên quan</th>
            <th class="bg-yellow bg-font-yellow text-nowrap text-center">SL đặt hàng</th>
            <% if [Erp::Qdeliveries::Delivery::TYPE_SALES_IMPORT].include?(@delivery.delivery_type) %>
                <th class="bg-yellow bg-font-yellow text-nowrap text-center">SL đã hoàn </th>
                <th class="bg-yellow bg-font-yellow text-nowrap text-right">Đơn giá hoàn</th>
                <th class="bg-yellow bg-font-yellow text-nowrap text-right">Thành tiền</th>
            <% elsif [Erp::Qdeliveries::Delivery::TYPE_SALES_EXPORT].include?(@delivery.delivery_type) %>
                <th class="bg-yellow bg-font-yellow text-nowrap text-center">SL đã xuất</th>
            <% else %>
                <th class="bg-yellow bg-font-yellow text-nowrap text-center">SL đã giao</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @delivery_details.each do |delivery_detail| %>
            <tr>
                <td class="text-left font-green-sharp sbold">
                    <%= backend_product_link(delivery_detail.product) %>
                </td>
                <td class="text-center">
                    <%= delivery_detail.product_unit %>
                </td>
                <td class="text-left">
                    <%= delivery_detail.serials %>
                </td>
                <td class="text-center"><%= delivery_detail.state_name %></td>
                <td class="text-center"><%= delivery_detail.warehouse_name %></td>
                <td class="text-left">
                    <% if delivery_detail.order_detail_id.nil? %>
                        Không chứng từ
                    <% else %>
                        <%= delivery_detail.get_order_code %>
                    <% end %>
                </td>
                <td class="numeric text-center">
                    <% if delivery_detail.order_detail_id.nil? %>
                        Không chứng từ
                    <% else %>
                        <strong><%= delivery_detail.ordered_quantity %></strong>
                    <% end %>
                </td>
                <td class="numeric text-center"><strong><%= delivery_detail.quantity %></strong></td>
                <% if [Erp::Qdeliveries::Delivery::TYPE_SALES_IMPORT].include?(@delivery.delivery_type) %>
                    <td class="text-right"><%= delivery_detail.price.present? ? format_price(delivery_detail.price) : '--' %></td>
                    <td class="text-right"><%= delivery_detail.price.present? ? format_price(delivery_detail.total_amount) : '--' %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

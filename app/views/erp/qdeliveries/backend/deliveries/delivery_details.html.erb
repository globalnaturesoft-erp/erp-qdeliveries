<table class="table table-bordered table-striped flip-content">
    <thead class="flip-content">                            
        <tr>
            <th width="15%" class="bg-yellow bg-font-yellow text-nowrap text-center">Mã SP</th>
            <th class="bg-yellow bg-font-yellow text-nowrap">Tên SP</th>
            <th class="bg-yellow bg-font-yellow text-nowrap">Số lượng đã giao</th>
            <th class="bg-yellow bg-font-yellow text-nowrap">Kho</th>
            <th class="bg-yellow bg-font-yellow text-nowrap">Trạng thái sản phẩm</th>
            <th class="bg-yellow bg-font-yellow text-nowrap">Ghi chú</th>
            <th width="10%" class="bg-yellow bg-font-yellow text-nowrap text-right">TT giao hàng</th>
        </tr>                           
    </thead>
    <tbody>
        <% @delivery.delivery_details.each do |delivery_detail| %>
            <tr>
                <td width="15%" class="text-center"><strong><%= delivery_detail.product_code %></strong></td>
                <td><%= link_to delivery_detail.product_name, erp_products.edit_backend_product_path(delivery_detail.product), target: "_blank", title: delivery_detail.product_name %></td>
                <td class="numeric text-center"><strong><%= delivery_detail.quantity %></strong></td>
                <td><%= delivery_detail.warehouse_name %></td>
                <td><%= delivery_detail.state_name %></td>
                <td><%= delivery_detail.note %></td>
                <td width="10%" class="text-right"></td>
            </tr>
        <% end %>
    </tbody>
</table>
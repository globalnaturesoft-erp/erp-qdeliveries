<% content_for :title do %>
    <%= t('.deliveries') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text-o"></i> <%= t('.deliveries') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.warehouse_export'),
        href: erp_qdeliveries.new_backend_delivery_path(delivery_type: Erp::Qdeliveries::Delivery::TYPE_WAREHOUSE_EXPORT),
        class: 'btn-noborder'
    }) %>
    <%= erp_component('button/create', {
        text: t('.customer_import'),
        href: erp_qdeliveries.new_backend_delivery_path(delivery_type: Erp::Qdeliveries::Delivery::TYPE_CUSTOMER_IMPORT),
        class: 'btn-noborder'
    }) %>
    <%= erp_component('button/create', {
        text: t('.warehouse_import'),
        href: erp_qdeliveries.new_backend_delivery_path(delivery_type: Erp::Qdeliveries::Delivery::TYPE_WAREHOUSE_IMPORT),
        class: 'btn-noborder'
    }) %>
    <%= erp_component('button/create', {
        text: t('.manufacturer_export'),
        href: erp_qdeliveries.new_backend_delivery_path(delivery_type: Erp::Qdeliveries::Delivery::TYPE_MANUFACTURER_EXPORT),
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_qdeliveries.list_backend_deliveries_path,
    keywords: [
        {
            text: t('.code'), name: 'erp_qdeliveries_deliveries.code'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-trash"></i> '+t('.change_deleted'),
            url: erp_qdeliveries.status_deleted_all_backend_deliveries_path,
            data_method: 'PUT',
            data_confirm: t('.change_deleted_confirm')
        }
    ],
    filters: [
        {
            text: t('.is_delivered'), name: 'erp_qdeliveries_deliveries.status', value: Erp::Qdeliveries::Delivery::STATUS_DELIVERED, checked: true
        },
        {
            text: t('.is_deleted'), name: 'erp_qdeliveries_deliveries.status', value: Erp::Qdeliveries::Delivery::STATUS_DELETED, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.warehouse_export'), name: 'erp_qdeliveries_deliveries.delivery_type', value: Erp::Qdeliveries::Delivery::TYPE_WAREHOUSE_EXPORT, checked: false
        },
        {
            text: t('.warehouse_import'), name: 'erp_qdeliveries_deliveries.delivery_type', value: Erp::Qdeliveries::Delivery::TYPE_WAREHOUSE_IMPORT, checked: false
        },
        {
            text: t('.customer_import'), name: 'erp_qdeliveries_deliveries.delivery_type', value: Erp::Qdeliveries::Delivery::TYPE_CUSTOMER_IMPORT, checked: false
        },
        {
            text: t('.manufacturer_export'), name: 'erp_qdeliveries_deliveries.delivery_type', value: Erp::Qdeliveries::Delivery::TYPE_MANUFACTURER_EXPORT, checked: false
        }
    ],
    columns: [
        {
            text: t('.code'), name: 'code', value: true, checked: true
        },
        {
            text: t('.customer'), name: 'customer', value: true, checked: true
        },
        {
            text: t('.employee'), name: 'employee', value: true, checked: false
        },
        {
            text: t('.delivery_date'), name: 'delivery_date', value: true, checked: true
        },
        {
            text: t('.delivery_type'), name: 'delivery_type', value: true, checked: true
        },
        {
            text: t('.quantity'), name: 'quantity', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_qdeliveries_deliveries.created_at', sort_direction: 'desc' }
) %>

<% content_for :title do %>
    <%= t('.purchases_orders') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-check-square-o"></i> <%= t('.purchases_orders') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.purchase_import'),
        href: erp_qdeliveries.new_backend_delivery_path(delivery_type: Erp::Qdeliveries::Delivery::TYPE_PURCHASE_IMPORT),
        class: 'btn-noborder'
    }) %>
    <%= erp_component('button/create', {
        text: t('.purchase_export'),
        href: erp_qdeliveries.new_backend_delivery_path(delivery_type: Erp::Qdeliveries::Delivery::TYPE_PURCHASE_EXPORT),
        class: 'btn-noborder'
    }) %>
<% end %>

<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Từ ngày',
                name: 'from_date',
                placeholder: 'Chọn ngày'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Đến ngày',
                name: 'to_date',
                placeholder: 'Chọn ngày'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('dataselect', {
                label: 'Mốc thời gian',
                name: 'period',
                value: (@period.present? ? @period.id : ''),
                text: (@period.present? ? @period.name : ''),
                placeholder: 'Chọn khoảng thời gian',
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'customer',
                label: t('.filter_customer'),
                placeholder: t('.choose_customer'),
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'warehouse',
                label: t('.filter_warehouse'),
                placeholder: t('.choose_warehouse'),
                url: erp_warehouses.dataselect_backend_warehouses_path(format: 'json')
            }) %>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_qdeliveries.backend_purchases_orders_listing_path,
    keywords: [
        {
            text: t('.order_code'), name: 'erp_orders_orders.code'
        },
        {
            text: t('.customer'), name: 'erp_contacts_contacts.name'
        },
        {
            text: t('.employee'), name: 'erp_users.name'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [

    ],
    filters: [
        {
            text: t('.draft'), name: 'status', value: Erp::Orders::Order::STATUS_DRAFT, checked: false
        },
        {
            text: t('.confirmed'), name: 'status', value: Erp::Orders::Order::STATUS_CONFIRMED, checked: true
        },
        {
            text: t('.deleted'), name: 'status', value: Erp::Orders::Order::STATUS_DELETED, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.not_delivery'), name: 'cache_delivery_status', value: Erp::Orders::Order::DELIVERY_STATUS_NOT_DELIVERY, checked: true
        },
        {
            text: t('.delivered'), name: 'cache_delivery_status', value: Erp::Orders::Order::DELIVERY_STATUS_DELIVERED, checked: false
        },
        {
            text: t('.over_delivered'), name: 'cache_delivery_status', value: Erp::Orders::Order::DELIVERY_STATUS_OVER_DELIVERED, checked: false
        }
    ],
    columns: [
        {
            text: t('.order_code'), name: 'order_code', value: true, checked: true
        },
        {
            text: t('.customer'), name: 'customer', value: true, checked: true
        },
        {
            text: t('.quantity'), name: 'quantity', value: true, checked: true
        },
        {
            text: t('.order_date'), name: 'order_date', value: true, checked: true
        },
        {
            text: t('.warehouse'), name: 'warehouse', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ]
) %>

<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("order_code") %>
                <th width='15%'>
                    <%= t('.order_code') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("customer") %>
                <th>
                    <%= t('.customer') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("quantity") %>
                <th>
                    <%= t('.quantity') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("order_date") %>
                <th>
                    <%= t('.order_date') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("warehouse") %>
                <th>
                    <%= t('.warehouse') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th class="text-center">
                    <%= t('creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_orders_orders.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%" class="text-right"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr class="odd gradeX has-child-table" data-url="<%= erp_qdeliveries.backend_sales_order_details_path(id: order.id) %>">
                <td>
                    <%= erp_datalist_check_row(id: order.id) %>
                </td>
                <% if get_columns(params).include?("order_code") %>
                <td>
                    <i class="fa fa-plus expand tr-expand-button"></i>
                    <strong><%= link_to order.code, erp_orders.edit_backend_order_path(order), class: "font-yellow-gold sbold", target: "_blank", title: order.code %></strong>
                </td>
                <% end %>
                <% if get_columns(params).include?("customer") %>
                <td><%= contact_link(order.customer, order.customer_name) %>
                    <% if Erp::Core.available?('ortho_k') %>
                        <%= order.display_customer_info.present? ? "<br/>".html_safe + order.display_customer_info : '' %>
                    <% end %>
                </td>
                <% end %>
                <% if get_columns(params).include?("quantity") %>
                <td><strong><%= order.total_delivered_quantity %>/<%= order.items_count %></strong></td>
                <% end %>
                <% if get_columns(params).include?("order_date") %>
                <td><%= format_date(order.order_date) %></td>
                <% end %>
                <% if get_columns(params).include?("warehouse") %>
                <td><%= order.warehouse_name %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <%= status_label(order.status) %><br>
                    <%= status_label(order.cache_delivery_status) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                <td>
                    <%= erp_component('avatar', {
                        user: order.creator
                    }) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= sales_purchases_order_dropdown_actions(order) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @orders.empty? %>
    <div class="datalist-empty-line"><%= t('no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@orders) %>

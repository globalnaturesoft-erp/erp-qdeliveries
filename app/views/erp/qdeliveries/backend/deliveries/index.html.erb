<% content_for :title do %>
    <%= t('.deliveries') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text-o"></i> <%= t('.deliveries') %>
<% end %>

<% content_for :page_toolbar do %>

    <!-- create export -->
    <%=
        actions = []
        
        actions << {
            text: t('.sales_export'),
            url: erp_qdeliveries.new_backend_delivery_path(
                delivery_type: Erp::Qdeliveries::Delivery::TYPE_SALES_EXPORT
            )
        } if can? :inventory_qdeliveries_sales_export_create, nil
        
        actions << {
            text: t('.purchase_export'),
            url: erp_qdeliveries.new_backend_delivery_path(
                delivery_type: Erp::Qdeliveries::Delivery::TYPE_PURCHASE_EXPORT
            )
        } if can? :inventory_qdeliveries_purchase_export_create, nil
        
        if can? :inventory_qdeliveries_custom_export_create, nil
            if (can? :inventory_qdeliveries_sales_export_create, nil) or (can? :inventory_qdeliveries_purchase_export_create, nil)
                actions << { divider: true }
            end
        end
        
        actions << {
            text: t('.custom_export'),
            url: erp_qdeliveries.new_backend_delivery_path(
                delivery_type: Erp::Qdeliveries::Delivery::TYPE_CUSTOM_EXPORT
            )
        } if can? :inventory_qdeliveries_custom_export_create, nil
        
        erp_component('button/actions', {
            actions: actions,
            text: t('.create_export'),
            class: 'btn-noborder btn-sm',
            icon: 'glyphicon glyphicon-export'
        }) if !actions.empty?
    %>

    <!-- create import -->
    <%=
        actions = []
        
        actions << {
            text: t('.sales_import'),
            url: erp_qdeliveries.new_backend_delivery_path(
                delivery_type: Erp::Qdeliveries::Delivery::TYPE_SALES_IMPORT
            )
        } if can? :inventory_qdeliveries_sales_import_create, nil
        
        actions << {
            text: t('.purchase_import'),
            url: erp_qdeliveries.new_backend_delivery_path(
                delivery_type: Erp::Qdeliveries::Delivery::TYPE_PURCHASE_IMPORT
            )
        } if can? :inventory_qdeliveries_purchase_import_create, nil
        
        if can? :inventory_qdeliveries_custom_import_create, nil
            if (can? :inventory_qdeliveries_sales_import_create, nil) or (can? :inventory_qdeliveries_purchase_import_create, nil)
                actions << { divider: true }
            end
        end
        
        actions << {
            text: t('.custom_import'),
            url: erp_qdeliveries.new_backend_delivery_path(
                delivery_type: Erp::Qdeliveries::Delivery::TYPE_CUSTOM_IMPORT
            )
        } if can? :inventory_qdeliveries_custom_import_create, nil
        
        erp_component('button/actions', {
            actions: actions,
            text: t('.create_import'),
            class: 'btn-noborder btn-sm',
            icon: 'glyphicon glyphicon-import'
        }) if !actions.empty?
    %>

<% end %>


<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Từ ngày',
                name: 'from_date',
                placeholder: 'Chọn ngày'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('date', {
                label: 'Đến ngày',
                name: 'to_date',
                placeholder: 'Chọn ngày'
            }) %>
        </div>
        <div class="col-md-2">
            <%= erp_form_control('dataselect', {
                label: 'Mốc thời gian',
                name: 'period',
                value: (@period.present? ? @period.id : ''),
                text: (@period.present? ? @period.name : ''),
                placeholder: 'Chọn khoảng thời gian',
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'customer_id',
                label: 'Khách hàng',
                placeholder: 'Tìm theo khách hàng',
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json', is_customer: true,
                    contact_group_id: [Erp::Contacts::ContactGroup::GROUP_HOSPITAL,
                    Erp::Contacts::ContactGroup::GROUP_COMPANY,
                    Erp::Contacts::ContactGroup::GROUP_CLINIC,
                    Erp::Contacts::ContactGroup::GROUP_PHARMACY,
                    Erp::Contacts::ContactGroup::GROUP_RETAIL_CUSTOMER,
                    Erp::Contacts::ContactGroup::GROUP_STAFF]
                )
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'supplier_id',
                label: 'Nhà cung cấp',
                placeholder: 'Tìm theo nhà cung cấp',
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json', is_supplier: true,
                    contact_group_id: [Erp::Contacts::ContactGroup::GROUP_HOSPITAL,
                    Erp::Contacts::ContactGroup::GROUP_COMPANY,
                    Erp::Contacts::ContactGroup::GROUP_CLINIC,
                    Erp::Contacts::ContactGroup::GROUP_PHARMACY,
                    Erp::Contacts::ContactGroup::GROUP_RETAIL_CUSTOMER,
                    Erp::Contacts::ContactGroup::GROUP_STAFF]
                )
            }) %>
        </div>
    </div>
<% end %>

